{
  "name": "govuk-markdown",
  "version": "0.6.0",
  "description": "Convert Markdown into GOV.UK Frontend-compliant HTML",
  "keywords": [
    "govuk",
    "markdown",
    "marked-extension",
    "marked"
  ],
  "homepage": "https://github.com/x-govuk/govuk-markdown#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/govuk-markdown/issues"
  },
  "license": "MIT",
  "files": [
    "x-govuk"
  ],
  "main": "index.js",
  "sass": "x-govuk/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/govuk-markdown.git"
  },
  "scripts": {
    "lint:prettier": "prettier . --check",
    "lint:prettier:fix": "prettier . --write",
    "lint:js": "eslint '**/*.js'",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "lint:scss": "stylelint '**/*.scss'",
    "lint:scss:fix": "stylelint '**/*.scss' --fix",
    "lint": "npm run lint:prettier && npm run lint:js && npm run lint:scss",
    "lint:fix": "npm run lint:prettier:fix && npm run lint:js:fix && npm run lint:scss:fix",
    "test": "node --test",
    "coverage": "node --test --experimental-test-coverage",
    "release": "np"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "highlight.js": "^11.5.0",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^47.0.2",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "np": "^9.2.0",
    "prettier": "^3.1.0",
    "stylelint": "^15.0.0",
    "stylelint-config-gds": "^1.1.0",
    "stylelint-order": "^6.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
