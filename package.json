{
  "name": "govuk-markdown",
  "version": "0.3.0",
  "description": "Convert Markdown into GOV.UK Frontend-compliant HTML",
  "keywords": [
    "govuk",
    "markdown",
    "marked-extension",
    "marked"
  ],
  "homepage": "https://github.com/x-govuk/govuk-markdown#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/govuk-markdown/issues"
  },
  "license": "MIT",
  "files": [
    "x-govuk"
  ],
  "main": "index.js",
  "sass": "x-govuk/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/govuk-markdown.git"
  },
  "scripts": {
    "lint": "standard && stylelint 'x-govuk/**/*.scss'",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "c8 ava"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "highlight.js": "^11.5.0",
    "marked": "^5.0.0"
  },
  "devDependencies": {
    "ava": "^5.1.0",
    "c8": "^7.11.0",
    "standard": "^17.0.0",
    "stylelint": "^14.6.1",
    "stylelint-config-gds": "^0.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "c8": {
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
