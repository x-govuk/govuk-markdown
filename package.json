{
  "name": "govuk-markdown",
  "version": "0.4.0",
  "description": "Convert Markdown into GOV.UK Frontend-compliant HTML",
  "keywords": [
    "govuk",
    "markdown",
    "marked-extension",
    "marked"
  ],
  "homepage": "https://github.com/x-govuk/govuk-markdown#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/govuk-markdown/issues"
  },
  "license": "MIT",
  "files": [
    "x-govuk"
  ],
  "main": "index.js",
  "sass": "x-govuk/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/govuk-markdown.git"
  },
  "scripts": {
    "prelint": "prettier . --check",
    "lint": "eslint '**/*.js' && stylelint 'x-govuk/**/*.scss'",
    "test": "node --test",
    "coverage": "node --test --experimental-test-coverage",
    "release": "np"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "highlight.js": "^11.5.0",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "np": "^9.2.0",
    "prettier": "^3.1.0",
    "stylelint": "^15.0.0",
    "stylelint-config-gds": "^1.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "embeddedLanguageFormatting": "off",
          "singleQuote": false
        }
      },
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "plugin:jsdoc/recommended-typescript-flavor",
      "standard",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
