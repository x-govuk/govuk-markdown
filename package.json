{
  "name": "govuk-markdown",
  "version": "0.4.0",
  "description": "Convert Markdown into GOV.UK Frontend-compliant HTML",
  "keywords": [
    "govuk",
    "markdown",
    "marked-extension",
    "marked"
  ],
  "homepage": "https://github.com/x-govuk/govuk-markdown#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/govuk-markdown/issues"
  },
  "license": "MIT",
  "files": [
    "x-govuk"
  ],
  "main": "index.js",
  "sass": "x-govuk/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/govuk-markdown.git"
  },
  "scripts": {
    "lint": "standard && stylelint 'x-govuk/**/*.scss'",
    "test": "node --test",
    "coverage": "node --test --experimental-test-coverage",
    "release": "np"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "highlight.js": "^11.5.0",
    "marked": "^5.0.0"
  },
  "devDependencies": {
    "np": "^9.2.0",
    "standard": "^17.0.0",
    "stylelint": "^14.6.1",
    "stylelint-config-gds": "^0.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
